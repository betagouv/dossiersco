<section class="section">
  <h1>Mef</h1>

  <div class="text-right">
    <%= link_to link_to 'Nouveau Mef', new_configuration_mef_path, {class: 'button-outline primary'} %>
  </div>

  <table class="table">
    <thead>
    <tr>
      <th>Libelle</th>
      <th>Code</th>
      <th colspan="2"></th>
    </tr>
    </thead>

    <tbody>
    <% @mef.each do |mef| %>
      <tr>
        <td><%= mef.libelle %></td>
        <td><%= mef.code %></td>
        <td><%= link_to 'Modifier', edit_configuration_mef_path(mef) %></td>
        <td><%= link_to 'Supprimer', [:configuration, mef], method: :delete, data: { confirm: 'Etes vous sÃ»r ?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>