      </div>
      <div class="form__group">
        <%= f.label :nom %>
        <%= f.text_field :nom %>
      </div>
      <div class="form__group">
        <%= f.label :adresse %>
        <%= f.text_field :adresse %>
      </div>
      <div class="form__group">
        <%= f.label :code_postal %>
        <%= f.text_field :code_postal %>
      </div>
      <div class="form__group">
        <%= f.label :ville %>
        <%= f.text_field :ville %>
