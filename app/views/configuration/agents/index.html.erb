<p id="notice"><%= notice %></p>

<h1>Agents</h1>

<table>
  <thead>
    <tr>
      <th>Identifiant</th>
      <th>Prenom</th>
      <th>Nom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @agents.each do |agent| %>
      <tr>
        <td><%= agent.identifiant %></td>
        <td><%= agent.nom %></td>
        <td><%= agent.prenom %></td>
        <td><%= link_to 'Modifier', edit_configuration_agent_path(agent) %></td>
        <td><%= link_to 'Supprimer', agent, method: :delete, data: { confirm: 'Voulez-vous vraiment supprimer cet agent ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

