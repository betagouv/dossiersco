<div class="col-12">
  <div class="card">
    <h2 class="card-header">Import depuis siecle</h2>
    <div class="card-body p-3">

      <div class="statut-import">
        <p>Vous avez soumis un fichier de données SIECLE.</p>
        <% case @tache.statut
           when 'en_attente' %>
          <p>L'import de cette base sera réalisé prochainement.</p>
        <% when 'en_cours' %>
          <p>L'import de cette base est en cours.</p>
        <% when 'terminée' %>
          <p>Cette base a bien été importée.</p>
          <div class="message_de_succes"><a href="/agent/liste_des_eleves"><%= @tache.message %></a></div>
        <% end %>
      </div>

      <% if @tache.statut != 'en_attente' && @tache.statut != 'en_cours' %>
        <%= form_for TacheImport.new, multipart: true do |form| %>
          <p class="card-text">Sélectionnez un fichier au format xls</p>
          <div class="card-relat document mb-3">

            <%= form.file_field :fichier, data: { btnClass: "btn btn-primary", text: "Parcourir"}, class: "filestyle" %>

          </div>
          <div class="col">
            <button type="submit" class="btn btn-primary float-right">Importer le fichier SIECLE <img src="../images/suivant.png" alt="suivant" title="suivant"></button>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="card">
    <h2 class="card-header">Import depuis affelnet</h2>
    <div class="card-body p-3">
      <%= form_tag dossier_affelnet_path, { multipart: true } do |f| %>
        <div class="card-relat document mb-3">
          <%= file_field_tag :fichier, class: "filestyle",  data: { btnClass: "btn btn-primary", text: "Parcourir"} %>
        </div>
        <div class="col">
          <button type="submit" class="btn btn-primary float-right">Importer le fichier affelnet<img src="../images/suivant.png" alt="suivant" title="suivant"></button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript" src="/js/bootstrap-filestyle-2.1.0/src/bootstrap-filestyle.min.js"> </script>
