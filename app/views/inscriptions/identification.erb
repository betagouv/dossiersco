<div class="padding">
  <h1 class="text-center">Agent EPLE</h1>
</div>
<div class="column">
  <form class="form-signin col-md-4 col-12 mx-auto" action="/agent" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <% if session[:erreur_login] %>
      <p class="erreur"><%= session[:erreur_login] %></p>
      <% session.delete :erreur_login %>
    <% end %>

    <label class="col-form-label" for="formGroupExampleInput"><%= t('.identifiant') %></label>
    <input name="identifiant" type="text" class="form-control" id="formGroupExampleInput" placeholder="intendant.collegexyz@ac-paris.fr" autofocus>

    <label class="col-form-label" for="mot-de-passe"><%= t('.mot_de_passe') %></label>
    <input name="mot_de_passe" type="password" class="form-control" id="mot-de-passe" >

    <button class="btn btn-lg btn-primary btn-block mt-3"><%= t('.se_connecter') %></button>

  </form>
  <div class="col-md-4 col-12 mx-auto mt-5 text-center">
    <%= link_to t('.inscription'), new_configuration_etablissement_path %>
  </div>
</div>