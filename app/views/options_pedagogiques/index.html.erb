<section class="section">

  <div class="text-right">
    <%= link_to t('.nouveau_mef'), new_configuration_mef_path, {class: 'button-outline primary'} %>
    <%= link_to t('.nouvelle_option_pedagogique'), new_option_pedagogique_path, {class: 'button-outline primary'} %>
  </div>

  <% @mefs.each do |mef| %>

    <div class="panel">
      <div class="panel__header">
      <h3><%= "#{mef.libelle} (#{mef.code}) " %><%= link_to t('.modifier'), edit_configuration_mef_url(mef) %></h3>
      </div>
      <div class="cards">
        <ul>
          <% mef.options_pedagogiques.each do |option| %>
            <li>
              <%= "#{option.nom} #{option.groupe} " %>
              <%= link_to t('.modifier'), edit_option_pedagogique_url(option) %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</section>

