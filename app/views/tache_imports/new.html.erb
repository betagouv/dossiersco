<div class="col-12">
  <div class="card siecle">
    <h2 class="card-header"><%= t('.titre_import') %></h2>
    <div class="card-body p-3">

      <% if @tache.statut != 'en_attente' && @tache.statut != 'en_cours' %>
        <%= form_for TacheImport.new, multipart: true do |form| %>
        <label>
          <%= form.radio_button :job_klass, 'ImporterSiecle', {checked: true} %>
          <%= t('.fichier_siecle') %>
        </label>
        <label>
          <%= form.radio_button :job_klass, 'ImporterAffelnet' %>
          <%= t('.fichier_affelnet') %>
        </label>
          <p class="card-text"><%= t('.selectionner_fichier') %></p>
          <div class="card-relat document mb-3">
            <%= form.file_field :fichier, data: { btnClass: "btn btn-primary", text: "Parcourir"}, class: "filestyle" %>
          </div>
          <div class="col">
            <button type="submit" class="btn btn-primary float-right">
              <%= t('.importer_fichier') %>
              <img src="../images/suivant.png" alt="suivant" title="suivant">
            </button>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<div id="modal-chargement" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-content d-flex align-items-center justify-content-center" role="document">
      <%= t('.modal-chargement') %>
  </div>
</div>

<script type="text/javascript" src="/js/bootstrap-filestyle-2.1.0/src/bootstrap-filestyle.min.js"> </script>
<script type="text/javascript" charset="utf-8">
  $('.btn[type="submit"]').click(function () {
    $('#modal-chargement').show()
  })
</script>
