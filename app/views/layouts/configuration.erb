      </ul>
    </nav>
    <main role="main" class="container">

    <% if (defined? message_info) && (!message_info.nil?) %>
      <div class="message_de_succes"><%= message_info %></div>
    <% end %>

    <%= yield %>

    </main><!--/.container-->

