<% content_for :head do %>
  <%= javascript_include_tag 'famille', 'data-turbolinks-track': 'reload' %>
<% end %>
<% content_for :body do %>

  <header class="navbar" role="navigation">
    <div class="navbar__container">
      <a class="navbar__home" href="/accueil">
        <img class="navbar__logo" src="/images/republique_francaise.svg" alt="logo Dossiersco" />
        <span class="navbar__domain">DossierSCO.fr</span>
      </a>
      <ul class="nav__links">
        <% if session[:identifiant].present? %>
          <li class="nav__item">
            <%= link_to 'Se dÃ©connecter', '/deconnexion' %>
        <% end %>
      </ul>
    </div>
  </header>

  <main role="main" class="container  mt-4">

    <%= yield %>

  </main>

  <!-- Piwik -->
  <script type="text/javascript">
    var _paq = _paq || [];
    _paq.push(["setDomains", ["*.www.dossiersco.fr","*.dossiersco.beta.gouv.fr","*.dossiersco.fr"]]);
    _paq.push(['trackPageView']);
    _paq.push(['enableLinkTracking']);
    (function() {
      var u="//stats.data.gouv.fr/";
      _paq.push(['setTrackerUrl', u+'piwik.php']);
      _paq.push(['setSiteId', '54']);
      var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
      g.type='text/javascript'; g.async=true; g.defer=true; g.src=u+'piwik.js'; s.parentNode.insertBefore(g,s);
    })();
  </script>

  <noscript><p><img src="//stats.data.gouv.fr/piwik.php?idsite=54" style="border:0;" alt="" /></p></noscript>
  <!-- End Piwik Code -->
<% end %>

<%= render template: 'layouts/application' %>