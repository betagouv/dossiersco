<div class="col-md-6 col-12 offset-md-3">

  <h2>Créer un établissement</h2>

  <%= form_for(@etablissement, url: etablisssements_path) do |f| %>

    <div class="form-group">
      <%= f.label :nom %>
      <%= f.text_field :nom, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :adresse %>
      <%= f.text_field :adresse, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :message_permanence %>
      <%= f.text_area :message_permanence, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :message_infirmerie %>
      <%= f.text_area :message_infirmerie, class: 'form-control'%>
    </div>
    <div class="form-check">
    </div>
    <div class="form-check">
      <%= f.check_box :gere_demi_pension, class: 'form-check-input'%>
      <%= f.label :gere_demi_pension, class: 'form-check-label' %>
    </div>
    <div class="form-group">
      <%= f.label :signataire %>
      <%= f.text_field :signataire, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.submit 'valider', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>