<!doctype html>
<html lang="en">
<head>

    <%= erb :'partials/header', :locals => {:stylesheet => 'style'} %>

</head>

<body>

  <%= erb :'partials/nav_light' %>

  <main role="main" class="container">

    <div class="row row-offcanvas row-offcanvas-right justify-content-center">

      <div class="aligner-progressions">

        <% @section = 2 %>
        <%= erb :'partials/progression_primaire' %>
        <% @sous_section = 2 %>
        <%= erb :'partials/progression_secondaire' %>

      </div>

      <div class="col-12 col-md-8">

        <h2>Responsable légal 2</h2>

        <hr>

        <form>

          <%= erb :'partials/champ_dropdown', :locals => { :desc => "Lien de parenté", :variable => "lien_parente_rl2", :options => ["Choisissez...", "Mère", "Père", "Tutrice", "Tuteur", "Autre"], :selected => "Père" } %>

          <%= erb :'partials/champ_texte', :locals => { :desc => "Prénom", :variable => "prenom_rl2", :valeur => "", :exemple => "Prénom" }%>

          <%= erb :'partials/champ_texte', :locals => { :desc => "Nom", :variable => "nom_rl2", :valeur => "Puydebois", :exemple => "Nom" }%>

          <%= erb :'partials/champ_texte', :locals => { :desc => "Adresse", :variable => "adr1_rl2", :valeur => "4 Place de la Nation", :exemple => "Numéro et nom de voie" }%>

          <%= erb :'partials/champ_texte', :locals => { :desc => "Code postal", :variable => "cp_rl2", :valeur => "75012", :exemple => "Code postal" }%>

          <%= erb :'partials/champ_texte', :locals => { :desc => "Ville", :variable => "ville_rl2", :valeur => "Paris", :exemple => "Ville" }%>

          <span style="display:block; height: 30px;"></span>

          <%= erb :'partials/champ_tel', :locals => { :desc => "Téléphone principal", :variable => "tel1_rl2", :valeur => "", :exemple => "Numéro de téléphone" }%>

          <%= erb :'partials/champ_tel', :locals => { :desc => "Téléphone secondaire", :variable => "tel2_rl2", :valeur => "", :exemple => "Numéro de téléphone" }%>

          <%= erb :'partials/champ_email', :locals => { :desc => "Email principal", :variable => "mail_rl2", :valeur => "", :exemple => "Adresse email" }%>

          <span style="display:block; height: 30px;"></span>

          <%= erb :'partials/champ_dropdown', :locals => { :desc => "Situation emploi", :variable => "sit_emploi_rl2", :options => ["Choisissez...", "Occupe un emploi", "Chômage", "Retraite", "Autre"], :selected => "" } %>

          <%= erb :'partials/champ_dropdown', :locals => { :desc => "Profession", :variable => "emploi_rl2", :options => ["Choisissez...", "Agriculteur·rice", "Artisan·e", "Commerçant·e", "Professeur·e", "Cadre", "Clergé", "Technicien·ne", "Employé·e", "Ouvrier·ère", "Retraité·e"], :selected => "" } %>

          <span style="display:block; height: 30px;"></span>

          <%= erb :'partials/champ_check', :locals => { :desc => "J'accepte que mes coordonnées soient communiquées aux fédérations de parents d'élèves" }%>

        </form>

        <%= erb :'partials/precedent_suivant', :locals => { :precedent => "resp_legal_1", :suivant => "urgence" } %>

      </div><!--/span-->

    </div><!--/row-->

  </main><!--/.container-->

</body>
</html>