<% nom_du_college = "Georges Courteline" %>
<% demarche = "inscription" %>
<% etablissement = {
	"nom" => "Jean Lurçat",
	"localite" => "Brive-la-Gaillarde"} %>

<div class="col-12 col-md-8">

	<span style="display:block; height: 30px;"></span>

	<h1>Collège <%= nom_du_college %></h1>

	<hr>

	<span style="display:block; height: 20px;"></span>

	<%= erb :'partials/contexte',
			:locals => {
				demarche: demarche,
				eleve: eleve,
				etablissement: etablissement } %>

	<%= erb :'partials/message_college',
			:locals => { demarche: demarche } %>

	<span style="display:block; height: 30px;"></span>

	<div class="row justify-content-md-center">
		<form action="/eleve/<%= session[:identifiant] %>" method="get">
			<button class="btn btn-primary">
				<%= erb :'partials/message_bouton_commencer', :locals => { demarche: demarche } %>
			</button>
		</form>
	</div>

</div>
