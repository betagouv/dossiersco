<div class="col-12 col-10">

  <span style="display:block; height: 50px;"></span>

  <div class="container">
    <div class="row">
      <div class="col-2">
      </div>
      <div class="col">
      <h1 class="separation">Tableau de bord</h1>
      </div>
    </div>
  </div>

  <div>
    Dossiers : <span id="total_dossiers" class="badge badge-danger"><%= total_dossiers %></span>
  </div>

  <span style="display:block; height: 80px;"></span>

  <div class="container">
    <div class="row">
      <div class="col-2">
      </div>
      <div class="col-1">
        <p>Dossiers</p>
      </div>
      <div class="col">
        <div class="progress" style="font-size: .8rem; margin-left: 0; width: 27em;">
          <div class="progress-bar bg-secondary" role="progressbar" style="width: 18%; height: 20px; padding-top: 3px;" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">Vierges</div>
          <div class="progress-bar bg-warning" role="progressbar" style="width: 19%; height: 20px; padding-top: 3px;" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100">En cours</div>
          <div class="progress-bar bg-primary" role="progressbar" style="width: 46%; height: 20px; padding-top: 3px;" aria-valuenow="7" aria-valuemin="0" aria-valuemax="100">En attente de validation</div>
          <div class="progress-bar bg-success" role="progressbar" style="width: 17%; height: 20px; padding-top: 3px;" aria-valuenow="63" aria-valuemin="0" aria-valuemax="100">Validés</div>
        </div>
      </div>
    </div>
  </div>

  <span style="display:block; height: 20px;"></span>

  <div class="container">
    <div class="row">
      <div class="col">
        Entrées en <strong>3<sup>ème</sup></strong>
      </div>
      <div class="col-10">
        <div class="progress" style="font-size: 1rem; margin-left: 0; width: 55em;">
          <div class="progress-bar bg-secondary" role="progressbar" style="width: 20%; height: 30px; padding-top: 6px" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">20</div>
          <div class="progress-bar bg-warning" role="progressbar" style="width: 10%; height: 30px; padding-top: 6px" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100">10</div>
          <div class="progress-bar bg-primary" role="progressbar" style="width: 7%; height: 30px; padding-top: 6px" aria-valuenow="7" aria-valuemin="0" aria-valuemax="100">7</div>
          <div class="progress-bar bg-success" role="progressbar" style="width: 63%; height: 30px; padding-top: 6px" aria-valuenow="63" aria-valuemin="0" aria-valuemax="100">63</div>
        </div>
      </div>
    </div>

    <span style="display:block; height: 30px;"></span>

    <div class="row">
      <div class="col">
        Entrées en <strong>4<sup>ème</sup></strong>
      </div>
      <div class="col-10">
        <div class="progress" style="font-size: 1rem; margin-left: 0; width: 56em;">
          <div class="progress-bar bg-secondary" role="progressbar" style="width: 18%; height: 30px; padding-top: 6px" aria-valuenow="18" aria-valuemin="0" aria-valuemax="100">18</div>
          <div class="progress-bar bg-warning" role="progressbar" style="width: 20%; height: 30px; padding-top: 6px" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">20</div>
          <div class="progress-bar bg-primary" role="progressbar" style="width: 14%; height: 30px; padding-top: 6px" aria-valuenow="14" aria-valuemin="0" aria-valuemax="100">14</div>
          <div class="progress-bar bg-success" role="progressbar" style="width: 48%; height: 30px; padding-top: 6px" aria-valuenow="48" aria-valuemin="0" aria-valuemax="100">48</div>
        </div>
      </div>
    </div>

    <span style="display:block; height: 30px;"></span>

    <div class="row">
      <div class="col">
        Entrées en <strong>5<sup>ème</sup></strong>
      </div>
      <div class="col-10">
        <div class="progress" style="font-size: 1rem; margin-left: 0; width: 55em;">
          <div class="progress-bar bg-secondary" role="progressbar" style="width: 25%; height: 30px; padding-top: 6px" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25</div>
          <div class="progress-bar bg-warning" role="progressbar" style="width: 20%; height: 30px; padding-top: 6px" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">20</div>
          <div class="progress-bar bg-primary" role="progressbar" style="width: 15%; height: 30px; padding-top: 6px" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100">15</div>
          <div class="progress-bar bg-success" role="progressbar" style="width: 40%; height: 30px; padding-top: 6px" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100">40</div>
        </div>
      </div>
    </div>

    <span style="display:block; height: 30px;"></span>

    <div class="row">
      <div class="col">
        Entrées en <strong>6<sup>ème</sup></strong>
      </div>
      <div class="col-10">
        <div class="progress" style="font-size: 1rem; margin-left: 0; width: 57em;">
          <div class="progress-bar bg-secondary" role="progressbar" style="width: 30%; height: 30px; padding-top: 6px" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100">30</div>
          <div class="progress-bar bg-warning" role="progressbar" style="width: 40%; height: 30px; padding-top: 6px" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100">40</div>
          <div class="progress-bar bg-primary" role="progressbar" style="width: 10%; height: 30px; padding-top: 6px" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100">10</div>
          <div class="progress-bar bg-success" role="progressbar" style="width: 20%; height: 30px; padding-top: 6px" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">20</div>
        </div>
      </div>
    </div>
  </div>
  <span style="display:block; height: 50px;"></span>
  <div><%= agent.etablissement.nom %></div> 
</div>
