<% nom_du_college = "Jean Lurçat" %>
<% demarche = "reinscription" %>

<div class="col-12 col-md-8">

	<span style="display:block; height: 30px;"></span>

	<h1>Collège <%= nom_du_college %></h1>

	<hr>

	<span style="display:block; height: 20px;"></span>

	<%= erb :'partials/contexte', :locals => { demarche: demarche } %>

	<%= erb :'partials/message_college', :locals => { demarche: demarche } %>

	<span style="display:block; height: 30px;"></span>

	<div class="row justify-content-md-center">
		<form action="/r1" method="get">
			<button class="btn btn-primary">
				<%= erb :'partials/message_bouton_commencer', :locals => { demarche: demarche } %>
			</button>
		</form>
	</div>

</div>
