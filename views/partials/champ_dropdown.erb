<div class="form-group row">
	<label for="<%= variable %>" class="col-sm-4 col-form-label"><%= desc %></label>
	<div class="col-sm-5">
	  <select id="<%= variable %>" class="form-control" name="<%= variable %>" <%= required if defined? required %>>
	  	<% options.each do |option| %>
	    	<option <% if option == selected %> selected <% end %>><%= option %></option>
	    <% end %>
	  </select>
	</div>
</div>