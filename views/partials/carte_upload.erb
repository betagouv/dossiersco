<div class="card">
  <h5 class="card-header"><%= @document %></h5>
  <div class="card-body">
    <p class="card-text"><%= @explication %></p>


    <div class="card-relat">

      <button type="button" class="btn btn-primary btn-sm">
        <label class="upload" for="<%= @variable %>"><%= @label %></label>
        <input type="file" hidden name="<%= @variable %>" id="<%= @variable %>"
               onChange="change_fichier(this)" multiple>

      </button>
      <br />
      <span id="fichier_<%= @variable %>"></span>


    </div>
  </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
  $(document).ready(function(){
    change_fichier = function(o){
        $('span[id=fichier_'+o.id+']').html(o.files[0].name);
        $('label[for='+o.id+']').html('Modifier')
    }});
</script>