<%
    premier_prenom = [
        {
          name: "prenom",
          label: "Prénom",
          type: "text",
          value: eleve.prenom,
          indication: "Prénom",
          disabled: false
        }]

    autres_prenoms = [
        {
          name: "prenom_2",
          label: "(Deuxième prénom)",
          type: "text",
          value: eleve.prenom_2,
          indication: "(Deuxième prénom)",
          disabled: false
        },
        {
          name: "prenom_3",
          label: "(Troisième prénom)",
          type: "text",
          value: eleve.prenom_3,
          indication: "(Troisième prénom)",
          disabled: false
        }]

    reste_identite = [
        {
          name: "nom",
          label: "Nom",
          type: "text",
          value: eleve.nom,
          indication: "Nom",
          disabled: false
        },
        {
          name: "sexe",
          label: "Sexe",
          type: "radio",
          options: ["Féminin", "Masculin"],
          checked: eleve.sexe,
        },
        {
          type: "espace",
          hauteur: 20,
        },
        {
          name: "ville_naiss",
          label: "Ville de naissance",
          type: "text",
          value: eleve.ville_naiss,
          indication: "Ville de naissance",
          disabled: false
        },
        {
          name: "pays_naiss",
          label: "Pays de naissance",
          type: "text",
          value: eleve.pays_naiss,
          indication: "Pays de naissance",
          disabled: false
        },
        {
          type: "espace",
          hauteur: 20,
        },
        {
          name: "nationalite",
          label: "Pays de nationalité",
          type: "text",
          value: eleve.nationalite,
          indication: "Pays de nationalité",
          disabled: false
        },
        {
          type: "espace",
          hauteur: 10,
        }]

    enseignement_obligatoire = [
        {
          name: "lv2",
          label: "Langue Vivante 2",
          type: "radio",
          checked: eleve.lv2,
          options: ["Allemand", "Espagnol"]
        }
    ]
    enseignement_facultatif = [
    {
        name: "latin",
        label: "Langue Vivante 2",
        type: "checkbox",
    }
    ]

%>


<% @section = 1 %>
<%= erb :'partials/navigation' %>

<div class="col-12 col-md-8">

  <span style="display:block; height: 50px;"></span>

  <p><em>Veuillez corriger les informations incorrectes :</em></p>

  <form action="/eleve"  method="post">

    <h3>Identité de l'élève</h3>

    <hr>

    <%= construire premier_prenom %>

    <% if eleve.niveau_classe_ant !~ /5EME/ and eleve.niveau_classe_ant !~ /6EME/ %>
      <%= construire autres_prenoms %>
    <% end %>

    <%= construire reste_identite %>

    <span style="display:block; height: 20px;"></span>

    <% if eleve.niveau_classe_ant =~ /6EME/ %>
      <h3>Enseignement obligatoire</h3>
      <hr>

      <%= construire enseignement_obligatoire %>

      <span style="display:block; height: 20px;"></span>

    <% end %>

    <% if eleve.niveau_classe_ant =~ /5EME/ %>
      <h3>Enseignement facultatif</h3>
      <hr>

      <p><em>Le choix d'un enseignement facultatif engage votre enfant à le suivre jusqu'à la fin de sa scolarité au collège.</em></p>

      <div class="form-group row">
        <div class="col-5 padding-top-8">Langues et Cultures de l'Antiquité</div>
        <div class="col">
          <div class="form-check">
            <label class="form-check-label">
              <input class="form-check-input" type="checkbox"> Latin
            </label>
          </div>
        </div>
      </div>
    <% end %>

    <%= erb :'partials/nouveau_precedent_suivant', :locals => { :precedent => "accueil"} %>

  </form>

</div>