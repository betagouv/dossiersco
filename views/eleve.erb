        <form>

          <div class="form-group row">
            <label for="inputPrenom" class="col-sm-3 col-form-label">Prénom</label>
            <div class="col-sm-6">
              <input type="text" class="form-control" id="inputPrenom" value="Etienne" placeholder="Prénom">
